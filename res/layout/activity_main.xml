<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="cn.brainit.eyeforyou.MainActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/holdButton"
        android:layout_centerHorizontal="true">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center|center_vertical" />

        <LinearLayout
            android:id="@+id/Rectange"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center|center_vertical"
            android:background="@drawable/rectange_border"
            android:orientation="horizontal" >
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/cutPreview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/holdButton"
        android:layout_gravity="center|bottom"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/eye" >
    </ImageView>

    <Button
        android:id="@+id/holdButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/oval_button"
        android:text="@string/get_word_by_press" />

</RelativeLayout>